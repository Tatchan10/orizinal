<% if logged_in? %>
  <div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= current_user.name %></h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(current_user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-md-8">
  <p><span class="orange b"><%= current_user.nickname %></span>
  <p class="orange b">自己紹介</p>
  <p><%= current_user.detail %></p>
  </div>
  <%= link_to 'プロフィールを編集する', edit_user_path(current_user) %>
  <div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Posts <span class="badge"><%= @count_posts %></span><% end %></li>
      <li><a href="#">Friends</a></li>
    </ul>
  </div>
</div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
